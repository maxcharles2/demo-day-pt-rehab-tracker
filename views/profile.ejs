        <div class="col-sm-6">
          <h3 class="gray">Rehab exercises</h3>
          <ul class="exerciseListContainer">
          <% for(var i=0; i<exerciseList.length; i++) {%>
            <li class="exerciseItem" data-id="<%= exerciseList[i]._id %>"> <%# id stored in data-id attribute %>
              <span class="gray userName">User: <%= exerciseList[i].userNameDB %></span>
              <span class="gray phase">Current phase: <%= exerciseList[i].phaseDB %></span>
              <span class="gray dayOfTheWeek">Day of the week: <%= exerciseList[i].dayOfTheWeekDB %></span>
              <span class="gray exerciseName">Exercise name: <%= exerciseList[i].exerciseNameDB %></span>
              <div>
                <span class="gray sets"><%= exerciseList[i].setsDB %> x</span>
                <span class="gray reps"><%= exerciseList[i].repsDB %></span>
              </div>
              <span class="gray notes">Review: <%= exerciseList[i].notesDB %></span>
              <span class="gray thumbUp">Total upvotes: <%= exerciseList[i].thumbUpDB %></span>
              <div>
                <input type="text" placeholder="Change notes" name="updateNotesFromInput" class="newNotesVal">
                <button class="updateNotesBtn">Edit</button>
              </div>
              <div>
                <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
                <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
                <span><i class="fa fa-trash-o"></i></span>
              </div>
            </li>
          <% } %>
          </ul>

          <h2 class="gray">Add a rehab exercise to the list</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST" class="exerciseListForm">
            <input type="text" placeholder="username" value="<%= user.local.email %>" name="userNameFromForm">
            <input type="text" placeholder="Current phase" name="phaseFromForm">
            <input type="text" placeholder="Day of the week" name="dayOfTheWeekFromForm">
            <input type="text" placeholder="Exercise name" name="exerciseNameFromForm" id="">
            <input type="number" placeholder="Sets" name="setsFromForm" id="">
            <input type="number" placeholder="Reps" name="repsFromForm" id="">
            <input type="text" placeholder="Notes" name="notesFromForm">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
